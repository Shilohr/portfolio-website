{
  "name": "portfolio-api",
  "version": "1.0.0",
  "description": "Portfolio website backend API",
  "main": "server.js",
  "engines": {
    "node": ">=16 <25"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "postinstall": "npm rebuild sharp",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:security": "jest --testNamePattern='Security'",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:all": "jest --coverage --verbose",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:auth": "jest auth.test.js",
    "test:projects": "jest projects.test.js",
    "test:github": "jest github.test.js",
    "test:config": "jest config.test.js",
    "test:silent": "jest --silent",
    "logs:report": "node scripts/monitor.js report",
    "logs:cleanup": "node scripts/monitor.js cleanup",
    "monitor:start": "node scripts/production-monitor.js start",
    "monitor:health": "node scripts/production-monitor.js health"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.3",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
